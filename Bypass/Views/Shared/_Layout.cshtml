@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--title>@ViewBag.Title</!--title-->
    <title>Обходные листы</title>
     <link href="/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css" />
     <link href="/bootstrap/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
     <link href="/css/bypass.css" rel="stylesheet" type="text/css" />
     <link href="/css/jquery-ui.min.css" rel="stylesheet" type="text/css" />
     <script src="/js/jquery-3.6.1.min.js"></script>
     <script src="/js/jquery-ui.min.js"></script>
     <script src="/js/datepicker-ru.js"></script>
     <script src="/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Обходные</span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                     <li class="nav-item">
                        <a asp-controller="Bypass" asp-action="BypassEdit" class="nav-link">
                            <i class="fa fa-users"></i>
                            Новый обходной</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Bypass" asp-action="Index" class="nav-link">
                            <i class="fa fa-users"></i>
                            Обходные</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Bypass" asp-action="Archive" class="nav-link">
                            <i class="fa fa-history"></i> Архив</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="User" asp-action="Logout" class="nav-link">
                            <i class="fa fa-sign-out"></i>
                            Выход</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Bypass" asp-action="ArchiveData" class="nav-link">
                            <i class="fa fa-sign-out"></i>
                            Данные</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
